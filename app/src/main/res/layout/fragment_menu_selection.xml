<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/iv_building_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_overlay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_large"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mapa IADE Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_map_iade"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="@string/map_iade"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            app:cornerRadius="@dimen/card_corner_radius"
            app:backgroundTint="@color/accent_teal"
            android:layout_marginBottom="@dimen/margin_large"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconGravity="top"
            app:iconSize="48dp" />

        <!-- Cantina/Bar Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cantina_bar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="@string/cantina_bar"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            app:cornerRadius="@dimen/card_corner_radius"
            app:backgroundTint="@color/accent_teal"
            android:layout_marginBottom="@dimen/margin_large"
            app:icon="@android:drawable/ic_dialog_info"
            app:iconGravity="top"
            app:iconSize="48dp" />

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/btn_back"
            android:textSize="@dimen/text_large"
            app:cornerRadius="@dimen/button_corner_radius"
            app:backgroundTint="@color/background_white"
            android:textColor="@color/text_dark"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/text_gray"
            app:strokeWidth="1dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>